{
  "name": "nightreign-data-tools",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:css && npm run build:reliquary",
    "build:css": "postcss styles/site.css styles/home.css styles/lexicon.css styles/reliquary/*.css --config postcss.config.cjs --base styles --dir styles --ext .built.css --no-map",
    "build:reliquary": "rollup -c",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@csstools/postcss-global-data": "^2.1.1",
    "@playwright/test": "^1.47.2",
    "@vitest/coverage-v8": "^2.1.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-custom-media": "^10.0.8",
    "prettier": "^3.3.3",
    "rollup": "^4.17.2",
    "vitest": "^2.1.1"
  }
}
